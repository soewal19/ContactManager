@{
    ViewData["Title"] = "Home Page";
}

@section Styles {
    <link rel="stylesheet" href="~/css/aurora.css" />
}

<!-- Aurora Background Effect -->
<div class="aurora-container splash-cursor-host" data-splash-cursor>
    <div class="aurora-background"></div>
    <canvas class="splash-cursor-canvas" aria-hidden="true"></canvas>
    
    <div class="aurora-content">
        <!-- Enhanced Hero Section -->
        <div class="hero-section mb-5">
            <h1 class="display-4 fw-bold mb-4">
                ContactManager
                <small class="text-light">Professional Contact Management Solution</small>
            </h1>
            
            <p class="lead mb-5">
                Welcome to our advanced contact management system with intelligent data processing, 
                bulk upload capabilities, and comprehensive API documentation.
            </p>
        </div>
        
        <!-- Modern Feature Cards with Glassmorphism -->
        <div class="features-section mb-5">
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="feature-card h-100">
                        <div class="feature-icon text-primary">
                            <i class="fas fa-users"></i>
                        </div>
                        <h5>Smart Contacts</h5>
                        <p>Intelligent contact management with advanced filtering</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card h-100">
                        <div class="feature-icon text-success">
                            <i class="fas fa-upload"></i>
                        </div>
                        <h5>Bulk Upload</h5>
                        <p>Seamless CSV import with data validation</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card h-100">
                        <div class="feature-icon text-warning">
                            <i class="fas fa-code"></i>
                        </div>
                        <h5>API Ready</h5>
                        <p>Full REST API with Swagger documentation</p>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Enhanced CTA Buttons -->
        <div class="cta-section">
            <a asp-controller="Contacts" asp-action="Index" class="btn btn-aurora btn-aurora-primary btn-lg me-3 mb-2">
                <i class="fas fa-arrow-right me-2"></i>Get Started
            </a>
            <a asp-controller="Documentation" asp-action="Index" class="btn btn-aurora btn-aurora-outline btn-lg mb-2">
                <i class="fas fa-book me-2"></i>API Documentation
            </a>
        </div>
    </div>
</div>

<!-- Info Section with Modern Cards -->
<section class="info-section py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-6">
                <div class="info-card h-100">
                    <h4>
                        <i class="fas fa-cogs me-2 text-primary"></i>
                        Advanced Features
                    </h4>
                    <ul class="list-unstyled mb-0">
                        <li class="d-flex align-items-center py-2">
                            <i class="fas fa-check-circle text-success me-3"></i>
                            <span>Intelligent data validation</span>
                        </li>
                        <li class="d-flex align-items-center py-2">
                            <i class="fas fa-check-circle text-success me-3"></i>
                            <span>Advanced filtering and search</span>
                        </li>
                        <li class="d-flex align-items-center py-2">
                            <i class="fas fa-check-circle text-success me-3"></i>
                            <span>Bulk operations support</span>
                        </li>
                        <li class="d-flex align-items-center py-2">
                            <i class="fas fa-check-circle text-success me-3"></i>
                            <span>Export capabilities</span>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="info-card h-100">
                    <h4>
                        <i class="fas fa-shield-alt me-2 text-success"></i>
                        Security & Privacy
                    </h4>
                    <ul class="list-unstyled mb-0">
                        <li class="d-flex align-items-center py-2">
                            <i class="fas fa-lock text-warning me-3"></i>
                            <span>Data encryption</span>
                        </li>
                        <li class="d-flex align-items-center py-2">
                            <i class="fas fa-user-shield text-warning me-3"></i>
                            <span>Privacy protection</span>
                        </li>
                        <li class="d-flex align-items-center py-2">
                            <i class="fas fa-key text-warning me-3"></i>
                            <span>Secure API endpoints</span>
                        </li>
                        <li class="d-flex align-items-center py-2">
                            <i class="fas fa-sync-alt text-warning me-3"></i>
                            <span>Regular security updates</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
